<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="Final_Project.Nursse" >

    <Button
        android:id="@+id/vitalsign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnViewLogRecords"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/btnViewLogRecords"
        android:text="Send Tips" />

    <Button
        android:id="@+id/btnViewLogRecords"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnAddLogRecord"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:text="@string/btnViewLogRecords" />

    <Button
        android:id="@+id/btnAddLogRecord"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnViewLogRecords"
        android:layout_below="@+id/vitalsign"
        android:layout_marginTop="31dp"
        android:text="@string/btnAddLogRecord" />

</RelativeLayout>
